<div class="container-fluid">
	<div id="the_form_wrap">
		<div class="col-md-offset-3 col-md-6">
			<%= form_tag '/home/geth_run' do %>
				<div class="input-group">
					<input type="text" name="geth_command" class="form-control" placeholder="Ex: geth --testnet --datadir /the/eth/data/dir " />
					<span class="input-group-btn">
						<button class="btn btn-default">Run</button>	
					</span>
				</div>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
var bodyHeight = $(window).height();
var marginTop = bodyHeight/2;
(function(){
	$('#the_form_wrap').attr('style', 'margin-top: '+marginTop+'px');	
})()
</script>