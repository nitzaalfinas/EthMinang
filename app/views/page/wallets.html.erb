<h1>Page#wallets</h1>

<div class="col-md-24">
	<a href="/page/wallets/new" class="btn btn-primary">New Wallet</a>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Wallet</th>
			<th>Balance</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @i = 0 %>
		<% @keys['result'].each do |k| %>

				<tr>
					<td><%= (@i+1) %></td>
					<td><%= k %></td>
					<td><%= eth_getBalance(k) %></td>
					<td>
						<%= link_to 'Send Money', { action: 'wallets_send_money', from_address: k[37..76] }, { class: 'btn btn-primary' } %>
					</td>
				</tr>

		<% end %>
	</tbody>
</table>
